#include "ft_printf.h"

int print_char(t_info *info, va_list ap)
{
	char	w;
	char	c;
	size_t	count;

	count = 0;
	c = va_arg(ap, char);
	if (info->zero == 0)
		w = ' ';
	else
		w = '0';
	if (info->minus == 0)
		count += info->width - 1;
		write(1, &w, info->width - 1);
	if (info->prec != 0)
	{
		write(1, &c, 1);
		count += 1;
	}
	return (count);
}	
